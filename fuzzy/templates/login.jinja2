{% extends 'base.jinja2' %}

{% block content %}
    <h2>Login</h2>
    {% if error %}
        <div class="error">{{error}}</div>
    {% endif %}
    <form method="POST">
        <p>
            <label for="username">Username:</label>
            <input type="text" name="username" />
        </p>
        <p>
            <label for="password">Password:</label>
            <input type="password" name="password" />
        </p>
        <p><input type="submit" value="Log In" /></p>
    </form>
{% endblock %}
