{% extends 'base.jinja2' %}

{% block content %}
    <h2>Create an Account</h2>
    {% if error %}
        <div class="error">{{error}}</div>
    {% endif %}
    <form method="POST">
        <p>
            <label for="username">
                Username:
                <input type="text" name="username" id="username" />
                <small>(lowercase a-z only, please)</small>
            </label>
        </p>
        <p><input type="submit" value="Register" /></p>
    </form>
{% endblock %}
